{
    "name": "ado-git-repo-insights-extension",
    "version": "1.0.0",
    "description": "ADO Git Repo Insights Extension UI",
    "private": true,
    "scripts": {
        "build": "tsc",
        "build:check": "tsc --noEmit",
        "lint": "eslint .",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
        "perf:update-baseline": "npx ts-node scripts/update-perf-baseline.ts",
        "copy-sdk": "pwsh -File scripts/copy-vss-sdk.ps1",
        "postinstall": "pwsh -File scripts/copy-vss-sdk.ps1 || exit 0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.0",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "eslint": "^9.18.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.53.1"
    },
    "jest-junit": {
        "outputDirectory": ".",
        "outputName": "test-results.xml"
    },
    "dependencies": {
        "vss-web-extension-sdk": "^5.141.0"
    }
}
